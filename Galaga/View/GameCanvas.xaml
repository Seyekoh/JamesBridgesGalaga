<Page
    x:Class="Galaga.View.GameCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="720" Height="600" Background="Black">
        <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="24" />
        <TextBlock x:Name="GameOverText" Text="" FontSize="125" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.ZIndex="10" />
        <TextBlock x:Name="PlayerLives" Text="Lives: 3" FontSize="24" HorizontalAlignment="Center" Canvas.Top="37" VerticalAlignment="Top"/>
    </Canvas>
</Page>